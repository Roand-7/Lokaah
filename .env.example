# ======================
# LOKAAH API Configuration
# ======================
# Copy this file to .env and fill in your actual values

# Supabase Configuration
# Get from: https://supabase.com/dashboard → Settings → API
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# AI API Keys
# Anthropic: https://console.anthropic.com
# Gemini: https://makersuite.google.com/app/apikey
ANTHROPIC_API_KEY=your-anthropic-key-here
GEMINI_API_KEY=your-gemini-key-here

# Optional: Google Cloud Configuration (for Vertex AI)
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
# GOOGLE_CLOUD_PROJECT=your-project-id
# GOOGLE_CLOUD_LOCATION=us-central1

# Server Configuration
DEBUG=false
PORT=8000
ENV=production

# AI Model Configuration
GEMINI_MODEL=gemini-2.0-flash

# Hybrid Oracle Configuration
# AI_RATIO: 0.0 = 100% Pattern-based (cheapest), 1.0 = 100% AI (most adaptive)
AI_RATIO=0.5

# CORS Origins (comma-separated)
# For production, add your actual domain
CORS_ORIGINS=http://localhost:5500,http://127.0.0.1:5500,https://yourdomain.com
